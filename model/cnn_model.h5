from tensorflow.keras import layers, models
from tensorflow.keras.preprocessing.image import ImageDataGenerator

IMG_SIZE = 128
DATASET_DIR = "dataset/train"

# Data generator
datagen = ImageDataGenerator(rescale=1./255, validation_split=0.2)
train_gen = datagen.flow_from_directory(DATASET_DIR, target_size=(IMG_SIZE, IMG_SIZE),
                                        batch_size=32, class_mode='binary', subset='training')
val_gen = datagen.flow_from_directory(DATASET_DIR, target_size=(IMG_SIZE, IMG_SIZE),
                                      batch_size=32, class_mode='binary', subset='validation')

# CNN Model
model = models.Sequential([
    layers.Conv2D(32, 3, activation='relu', input_shape=(IMG_SIZE, IMG_SIZE, 3)),
    layers.MaxPooling2D(),
    layers.Conv2D(64, 3, activation='relu'),
    layers.MaxPooling2D(),
    layers.Flatten(),
    layers.Dense(64, activation='relu'),
    layers.Dense(1, activation='sigmoid')
])

model.compile(optimizer='adam', loss='binary_crossentropy', metrics=['accuracy'])
model.fit(train_gen, validation_data=val_gen, epochs=5)
model.save("model/cnn_model.h5")
